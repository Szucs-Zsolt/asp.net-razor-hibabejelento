@page
@model Hibabejelento.Pages.ReopenTicketModel
@{
}
<div class="card">
    <div class="card-header text-center"><h3>Hibajegy: <b>#@Model.Ticket.Id</b></h3></div>
    <div class="card-body">
        <label asp-for="Ticket.Name" class="fw-bold"></label>
        @Model.Ticket.Name
        <br />
        <label asp-for="Ticket.Address" class="fw-bold"></label>
        @Model.Ticket.Address
        <br />
        <label asp-for="Ticket.Phone" class="fw-bold"></label>
        @Model.Ticket.Phone
        <br />
        <label asp-for="Ticket.Email" class="fw-bold"></label>
        @Model.Ticket.Email
        <br />
        <label asp-for="Ticket.ShortDescription" class="fw-bold"></label>
        @Model.Ticket.ShortDescription
        <br />
        <label asp-for="Ticket.LongDescription" class="fw-bold"></label>
        @Model.Ticket.LongDescription
        <br />
        <label asp-for="Ticket.HelpdeskNote" class="fw-bold"></label>
        @Model.Ticket.HelpdeskNote
        <br />
    </div>

    <div class="card-footer">
        <form method="post">
            <div class="text-center mb-1 fw-bold">
                <input type="checkbox" asp-for="IsReopened" />
                <span class="fw-bold">Hibajegy újboli megnyitása</span>
            </div>
            <div class="text-center">
                <button type="submit" class="button btn-primary">TOVÁBB</button>
            </div>
        </form>
    </div>
</div>